<h1>Listing products</h1>
<h3>(<%= link_to 'New Product', new_product_path %>)</h3>
<table>
  <tr>
    <th>Title</th>
    <th>Menu</th>
    <th>Price</th>
    <th>Description</th>
    <th>Dish num</th>
    <th>Manager</th>
  </tr>

<% @products.each do |product| %>
  <tr>
    <td><%= product.title %></td>
    <td><%= @menu_list[product.menu_list_id] %></td>
    <td><%= product.price %></td>
    <td><%= truncate(strip_tags(product.description), :lenght => 80,).html_safe %></td>
    <td><%= product.dish_num %></td>
    <td><%= link_to 'Show', product %> |
    <%= link_to 'Edit', edit_product_path(product) %> |
    <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />


