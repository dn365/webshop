<% if  notice %>
    <p id="notice"><%= notice %></p>
<% end %>


<p>
  <b>Title:</b>
  <%= @product.title %>
</p>

<p>
  <b>Description:</b> <br/>
  <%= (@product.description).html_safe %>
</p>

<p>
  <b>Dish num:</b>
  <%= @product.dish_num %>
</p>

<p>
  <b>Image url:</b>
  <%= image_tag @product.image_url(:thumb) %>
</p>

<p>
  <b>Price:</b>
  <%= @product.price %>
</p>


<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>
